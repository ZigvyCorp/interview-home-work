{
    "compilerOptions": {
        "sourceMap": true,
        "target": "ES2021",
        "baseUrl": "./src",
        "outDir": "./dist",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "resolveJsonModule": true
    },
    "include": [
        "./src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}