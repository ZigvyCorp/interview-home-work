<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <style>
      .header {
        overflow: hidden;
        background-color: #f1f1f1;
        padding: 20px 10px;
        margin-bottom: 3%;
      }

      .header a {
        float: left;
        color: black;
        text-align: center;
        padding: 12px;
        text-decoration: none;
        font-size: 20px; 
        line-height: 25px;
        border-radius: 4px;
      }
      .header h5 {
        float: left;
        color: black;
        text-align: center;
        padding: 12px;
        text-decoration: none;
        font-size: 20px; 
        line-height: 25px;
        border-radius: 4px;
      }

      .header a.logo {
        font-size: 25px;
        font-weight: bold;
      }

      .header a:hover {
        background-color: #ddd;
        color: black;
      }

      .header a.active {
        background-color: dodgerblue;
        color: white;
      }

      .header-center {
        float: left;
        margin-left: 35%;
      }
      .header-right {
        float: right;
      }
      .container {
        position: relative;
        overflow: hidden;
        width: 100%;
      }
      .responsive-iframe {
        position: absolute;
        top: 0;
        left: 0;
        bottom: 0;
        right: 0;
        width: 100%;
        height: 100%;
      }

    </style>
  </head>
  <body style="background-color:#b2cecf;">
    <!--  -->
    <!-- <h1>News</h1>
    <p>Welcome to posts</p> -->
    
    <div class="header">
      <a href="#" class="logo">CompanyLogo</a>
      <div class="header-center">
        <h5 class="" href="#">Blog</h5>
      </div>
      <div class="header-right">
        <h5 class="" href="#">Phuong Mai</h5>
      </div>
    </div>
    <div class="row">
      <form class="col-12 styleform ">
       
        <div class="form-group row">
          <label for="title" class="col-sm-2">Search</label>
          <input type="text" class="form-control col-sm-7" id="Search" name="Search" placeholder="Search" >
          <button type="submit" class="btn btn-primary">Submit</button>
        </div>
        
       
      </form>
    </div>
    <div class="container">
      <div class="card border-color responsive-iframe">
        <div class="card-header bg-transparent border-color">
          <h4>Posts</h4>
          
        </div>
        <% if(posts && posts.length){ %> 
          <% posts.forEach(e=>{ %> 
          <div class="card-body" style="border-bottom: 0.5px solid cadetblue">
            <h5 class="card-title" style="text-align: center;"><%= e?.title %> </h5>
            <div class="form-group row">
              <div class="col-sm-9">
                <p class="card-text">Author: <%= e?.owner?.name %> </p>
                <p class="card-text">Created At: <%= `${e.created_at.getDate()}/${e.created_at.getMonth() + 1}/${e.created_at.getFullYear()}` %> .</p>
              </div>
              <div class="col-sm-3">Tags:
                <% if(e.tags && e.tags.length){ %> 
                  <% e.tags.forEach(e=>{ %> 
                    <a style="background-color: #50d07d; border-radius: 10%; padding: 0.5%; "><%= e %></a>
                  <% }) %> 
                <% } %> 
              </div>
            </div>
            <p class="card-text">Content: <%= e?.content %> </p>
            <p class="card-text" style="margin-top: 2%;"><strong>Comment: <%= e?.comments?.length %> </strong> </p>
            <% if(e.comments && e.comments.length){ %> 
              <% e.comments.forEach(e=>{ %> 
                <p class="card-text" style="margin-top: 2%;"><%= e?.owner?.username %>: <%= e?.content %> </p>
              <% }) %> 
            <% } %> 
          </div>
          <br>
        <% }) %> 
        <% } %> 
        <div class="card-footer bg-transparent border-color">Footer</div>
      </div>
      <div>
        <p>
          <a href="/post" class="btn btn-primary">new Post</a>
          <a href="/user" class="btn btn-warning">new Author</a>
        </p>
      </div>
    </div>
   
    
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
  </body>
</html>
