{
    "compilerOptions": {
      "sourceMap": true,
      "target": "es2019",
      "outDir": "./dist",
      "baseUrl": "./src",
      "alwaysStrict": true,
      "noImplicitAny": false,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "esModuleInterop": true,
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
    },
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "node_modules"
    ]
  }